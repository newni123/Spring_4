<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="memberMapper" >


	<select id="memberSelect" parameterType="MemberVO" resultType="MemberVO">
		select * from member where id = #{id}
	</select>
	<insert id="join" parameterType="MemberVO">
		insert into member
		(id,pw,name,email,birth,gender,fileName,OriginalName)
		values(#{id},#{pw},#{name},#{email},#{birth},#{gender},#{fileName},#{originalName})
	</insert>
	<select id="login" resultType="MemberVO" parameterType="MemberVO">
		select id,name,email,to_char(birth,'yyyy-mm-dd') as birth,gender,fileName,originalName from member where id = #{id} and pw = #{pw}
	</select>
	<select id="memberCheckId" parameterType="MemberVO" resultType="MemberVO">
		select id from member where id = #{id}
	</select>
	<select id="emailCheck" parameterType="MemberVO" resultType="MemberVO">
		select email from member where email = #{email}
	</select>
	<update id="update" parameterType="MemberVO">
		update member set pw=#{pw},name=#{name},email=#{email},birth=#{birth},gender=#{gender} where id = #{id}
	</update>
	<delete id="delete" parameterType="MemberVO">
		delete member where id = #{id}
	</delete>
	<update id="pointUpdate" parameterType="MemberVO">

	</update>

</mapper>