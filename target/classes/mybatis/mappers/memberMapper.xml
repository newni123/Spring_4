<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="memberMapper">
	<insert id="join" parameterType="MemberVO">
		insert into member
		(id,pw,name,email,birth,gender)
		values(#{id},#{pw},#{name},#{email},#{birth},#{gender})
	</insert>
	<select id="login" resultType="MemberVO" parameterType="MemberVO">
		select * from member where id = #{id} and pw=#{pw}
	</select>
	<select id="memberIdCheck" parameterType="MemberVO" resultType="MemberVO">
		select id from member where id = #{id}
	</select>
	<update id="update" parameterType="MemberVO">

	</update>
	<delete id="delete" parameterType="MemberVO">

	</delete>
	<update id="pointUpdate" parameterType="MemberVO">

	</update>

</mapper>